{% assign posts = site_posts | where : 'topic', topic %}
{% for post in posts limit:3  %}
  <h3 class="{{"p-4 f-" | append: topic}}">
    <a href="{{ post.url }}">{{ post.title }}</a>
  </h3>
  <p>{{ post.excerpt }}</p>
  <p class='mb-8'><a href="{{ post.url }}" class="{{"btn btn-" | append: topic}}">Čítať ďalej</a></p>
{% endfor %}
